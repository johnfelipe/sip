--DROP FUNCTION insertar_esquema() CASCADE;
CREATE OR REPLACE FUNCTION insertar_esquema() RETURNS TRIGGER AS $insertaresquema$
DECLARE
BEGIN
	IF NEW.id_codigo_evaluacion = 1 THEN--ENES
